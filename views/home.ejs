<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>YapSpace - Home</title>
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <style>
      @font-face {
        font-family: "Quartzo";
        src: url("https://fonts.googleapis.com/css2?family=Poppins:wght@700;800;900&display=swap");
        font-weight: 700;
        font-display: swap;
      }

      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }

      body {
        font-family: "Inter", sans-serif;
        background: #140b29;
        color: white;
        min-height: 100vh;
      }

      /* Main Content */
      .main-content {
        padding: 80px 24px;
        max-width: 1200px;
        margin: 0 auto;
      }

      .cards-container {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 32px;
        max-width: 1000px;
        margin: 0 auto;
      }

      .card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.1);
        border-radius: 20px;
        overflow: hidden;
        transition: all 0.3s ease;
        cursor: pointer;
      }

      .card:hover {
        transform: translateY(-8px);
        box-shadow: 0 20px 40px rgba(139, 92, 246, 0.2);
        border-color: rgba(139, 92, 246, 0.3);
      }

      .card-image {
        width: 100%;
        height: 200px;
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        font-size: 48px;
        color: white;
        overflow: hidden;
      }
      .card-image img {
        width: 100%;
        height: 100%;
        object-fit: cover; /* This makes the image cover the area without stretching */
        object-position: center; /* Centers the image */
      }

      .card-content {
        padding: 24px;
      }

      .card-title {
        font-size: 20px;
        font-weight: 600;
        margin-bottom: 12px;
        color: white;
      }

      .card-description {
        color: rgba(255, 255, 255, 0.7);
        font-size: 14px;
        line-height: 1.5;
        margin-bottom: 20px;
      }

      .card-button {
        background: linear-gradient(135deg, #8b5cf6 0%, #7c3aed 100%);
        border: none;
        border-radius: 12px;
        color: white;
        padding: 12px 24px;
        font-size: 14px;
        font-weight: 600;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 0.5px;
        transform: scale(1);
        box-shadow: 0 0 0 rgba(139, 92, 246, 0);
        text-decoration: none;
      }
      .card-button:hover {
        transform: scale(1.05);
        box-shadow: 0 10px 20px rgba(139, 92, 246, 0.3);
        background: linear-gradient(135deg, #7c3aed 0%, #6d28d9 100%);
      }

      .card-button:active {
        transform: scale(0.98);
        box-shadow: 0 5px 10px rgba(139, 92, 246, 0.2);
      }

      /* Mobile Responsive */
      @media (max-width: 768px) {
        
        .cards-container {
          grid-template-columns: 1fr;
          gap: 24px;
        }

        .main-content {
          padding: 60px 16px;
        }
      }
    </style>
  </head>
  <body>
    <%- include("./nav") %>
    <!-- Main Content -->
    <main class="main-content">
      <div class="cards-container">
        <!-- Card 2 -->
        <% blogs.forEach(blog => { %>
        <div class="card" onclick="viewCard(2)">
          <div class="card-image">
            <img src="<%= blog.coverImageURL %>" />
          </div>
          <div class="card-content">
            <h3 class="card-title"><%= blog.title %></h3>
            <br>
            <a class="card-button" href="/blog/<%= blog._id %>">View</a>
          </div>
        </div>
        <% }) %>
      </div>
    </main>

    <script>
      function toggleDropdown() {
        const dropdown = document.querySelector(".dropdown");
        dropdown.classList.toggle("active");
      }

      // Close dropdown when clicking outside
      document.addEventListener("click", function (event) {
        const dropdown = document.querySelector(".dropdown");
        if (!dropdown.contains(event.target)) {
          dropdown.classList.remove("active");
        }
      });

      // Add scroll effect to navbar
      window.addEventListener("scroll", function () {
        const navbar = document.querySelector(".navbar");
        if (window.scrollY > 50) {
          navbar.style.background = "rgba(20, 11, 41, 0.98)";
        } else {
          navbar.style.background = "rgba(20, 11, 41, 0.95)";
        }
      });
    </script>
  </body>
</html>
